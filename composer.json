{
  "name": "patchlevel/event-sourcing",
  "type": "library",
  "license": "MIT",
  "description": "A lightweight but also all-inclusive event sourcing library with a focus on developer experience",
  "keywords": [
    "event-sourcing",
    "ddd"
  ],
  "homepage": "https://github.com/patchlevel/event-sourcing",
  "authors": [
    {
      "name": "Daniel Badura",
      "email": "daniel.badura@patchlevel.de"
    },
    {
      "name": "David Badura",
      "email": "david.badura@patchlevel.de"
    }
  ],
  "require": {
    "php": "~8.1.0",
    "doctrine/dbal": "^3.2.0",
    "psr/cache": "^2.0.0|^3.0.0",
    "psr/log": "^2.0.0|^3.0.0",
    "psr/simple-cache": "^2.0.0|^3.0.0",
    "symfony/console": "^5.4.1|^6.0.1",
    "symfony/finder": "^4.4.34|^5.4.0|^6.0.1"
  },
  "require-dev": {
    "ext-pdo_sqlite": "~8.1.0",
    "doctrine/migrations": "^3.3.2",
    "infection/infection": "^0.26.0",
    "patchlevel/coding-standard": "^1.1.1",
    "patchlevel/event-sourcing-psalm-plugin": "^2.0.0",
    "phpbench/phpbench": "^1.2.3",
    "phpspec/prophecy-phpunit": "^2.0.1",
    "phpstan/phpstan": "^1.4.3",
    "phpunit/phpunit": "^9.5.10",
    "psalm/plugin-phpunit": "^0.17.0",
    "roave/infection-static-analysis-plugin": "^1.14.0",
    "symfony/messenger": "^4.4.34|^5.4.0|^6.0.1",
    "symfony/var-dumper": "^5.4.1|^6.0.1",
    "vimeo/psalm": "^4.22.0"
  },
  "suggest": {
    "doctrine/migrations": "for schema migration support",
    "symfony/messenger": "for an advanced event bus"
  },
  "conflict": {
    "doctrine/migrations": "<3.3",
    "symfony/messenger": "<4.4"
  },
  "config": {
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "infection/extension-installer": true,
      "composer/package-versions-deprecated": true
    }
  },
  "autoload": {
    "psr-4": {
      "Patchlevel\\EventSourcing\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Patchlevel\\EventSourcing\\Tests\\": "tests/"
    }
  }
}
